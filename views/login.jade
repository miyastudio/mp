extends layout_base
block content
  div(ng-controller='login')
    .login-banner
      .page
        .login-area
          .login-area-content
            input(ng-model='user.name',placeholder='账户')
            input(ng-model='user.pass',placeholder='密码',type='password')
            .loginBtnGroup.group
              button.btn.login-button(ng-click='login()') 登录
              a.btn.login-reg(href='/reg') 弄个帐号